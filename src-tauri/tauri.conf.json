{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "PROS Simulator",
        "version": "0.5.0"
    },
    "tauri": {
        "cli": {
            "description": "GUI application for simulating VEX V5 robots without real hardware.",
            "args": [
                {
                    "name": "code",
                    "description": "Path to the user's robot code (*.wasm).",
                    "takesValue": true
                },
                {
                    "name": "workspace",
                    "description": "Path to the workspace to open on startup.",
                    "index": 1,
                    "takesValue": true,
                    "required": false
                }
            ]
        },
        "allowlist": {
            "all": false,
            "window": {
                "all": false,
                "center": false,
                "close": false,
                "create": false,
                "hide": false,
                "maximize": true,
                "minimize": false,
                "print": false,
                "requestUserAttention": false,
                "setAlwaysOnTop": false,
                "setClosable": false,
                "setContentProtected": false,
                "setCursorGrab": false,
                "setCursorIcon": false,
                "setCursorPosition": false,
                "setCursorVisible": false,
                "setDecorations": false,
                "setFocus": false,
                "setFullscreen": false,
                "setIcon": false,
                "setIgnoreCursorEvents": false,
                "setMaxSize": false,
                "setMaximizable": false,
                "setMinSize": false,
                "setMinimizable": false,
                "setPosition": false,
                "setResizable": false,
                "setSize": false,
                "setSkipTaskbar": false,
                "setTitle": true,
                "show": false,
                "startDragging": true,
                "unmaximize": true,
                "unminimize": false
            },
            "dialog": {
                "all": false,
                "ask": false,
                "confirm": false,
                "message": false,
                "open": true,
                "save": false
            },
            "fs": {
                "scope": ["$APPLOCALDATA/*"],
                "writeFile": true,
                "readFile": true,
                "exists": true
            },
            "path": {
                "all": true
            },
            "process": {
                "all": false,
                "exit": true,
                "relaunch": false,
                "relaunchDangerousAllowSymlinkMacos": false
            },
            "shell": {
                "all": false,
                "execute": true,
                "scope": [
                    {
                        "name": "pros-simulator-server",
                        "cmd": "$APPLOCALDATA/pros-simulator-server",
                        "args": true
                    },
                    {
                        "name": "pros-simulator-server.exe",
                        "cmd": "$APPLOCALDATA/pros-simulator-server.exe",
                        "args": true
                    },
                    {
                        "name": "chmod",
                        "cmd": "chmod",
                        "args": ["+x", { "validator": ".+" }]
                    },
                    {
                        "name": "cargo",
                        "cmd": "cargo",
                        "args": true
                    },
                    {
                        "name": "code",
                        "cmd": "code",
                        "args": ["--goto", { "validator": ".+" }]
                    }
                ],
                "open": "^file://.+",
                "sidecar": false
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "category": "DeveloperTool",
            "publisher": "pros-rs",
            "shortDescription": "Simulate VEX robots without real hardware.",
            "copyright": "Copyright Â© 2023 pros-rs. All rights reserved.",
            "identifier": "rs.pros.simulator",
            "macOS": {
                "signingIdentity": "-"
            },
            "deb": {
                "depends": ["libudev-dev"]
            },
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "macOSPrivateApi": true,
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "PROS Simulator",
                "width": 1100,
                "height": 800,
                "transparent": true,
                "minWidth": 500,
                "minHeight": 300
            }
        ]
    }
}
